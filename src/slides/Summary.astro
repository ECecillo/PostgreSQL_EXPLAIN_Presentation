---
import Slide from '../components/Slide.astro';

const summaryLinks = [
	{
		title: "👼 La vie d'une requête SQL",
		link: '#2',
	},
	{
		title: '🔎 Un "Query Plan" c\'est quoi ?',
		link: '#4',
	},
	{
		title: '📝 Le "Planner" et les enjeux de performance',
		link: '#4',
	},
	{
		title: '📏 La commande EXPLAIN dans tous ça ?',
		link: '#5',
		subcontent: [],
	},
	{
		title: '🎯 Conclusion',
		link: '#7',
	},
];
---

<Slide>
	<div
		style="display: flex; flex-direction: column; justify-items: center; align-items: center;"
	>
		<h3>- Sommaire -</h3>
		<div style="text-align: center;">
			<ol>
				{
					summaryLinks.map((link) => (
						<li class="fragment" style="padding: 1rem;">
							<a href={link.link}>{link.title}</a>
							{link.subcontent && (
								<ol>
									{link.subcontent.map((sublink) => (
										<li class="fragment">
											<a href={sublink.link}>{sublink.title}</a>
										</li>
									))}
								</ol>
							)}
						</li>
					))
				}
			</ol>
		</div>
	</div>
</Slide>
