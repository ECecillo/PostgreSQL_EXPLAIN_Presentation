---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link
			rel="icon"
			type="image/svg+xml"
			href="/PostgreSQL_EXPLAIN_Presentation/favicon.svg"
		/>
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
	</head>

	<body>
		<slot />

		<script>
			import Reveal from 'reveal.js';
			import RevealHighlight from 'reveal.js/plugin/highlight/highlight';
			import RevealNotes from 'reveal.js/plugin/notes/notes';
			import RevealMarkdown from 'reveal.js/plugin/markdown/markdown';

			Reveal.initialize({
				transition: 'none',
				history: true,
				// progress: false,
				controls: false,
				autoAnimateDuration: 0.5,
				autoAnimateEasing: 'cubic-bezier(0.4, 0, 0.2, 1)',
				slideNumber: 'c/t',
				plugins: [RevealHighlight, RevealNotes, RevealMarkdown], // use this if you want to show some code
				totalTime: 300,
			});
		</script>
	</body>
</html>

<style is:global>
	@import 'reveal.js/dist/reveal.css';
	@import 'reveal.js/dist/theme/night.css';
	@import '../../src/styles/highlightjs-theme-vs2015.css';
	@import '/src/styles/main.css';
</style>
